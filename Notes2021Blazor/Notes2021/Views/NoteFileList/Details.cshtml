@*@using Notes2020WebLib.Models*@
@model Notes2021Blazor.Shared.NoteFile

@{
    ViewData["Title"] = "Details";
    TZone tz = (TZone)ViewBag.TZ;
}

<h2>Details</h2>

<div>
    <h4>NoteFile</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Owner)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Owner.DisplayName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NoteFileName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NoteFileName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NoteFileTitle)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NoteFileTitle)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NumberArchives)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NumberArchives)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.LastEdited)
        </dt>
        <dd>
            @tz.Local(Model.LastEdited) @tz.Abbreviation
        </dd>
        <dt>Base Notes</dt>
        <dd>@ViewBag.BaseNotes</dd>
        <dt>Responses</dt>
        <dd>@(ViewBag.TotalNotes - @ViewBag.BaseNotes)</dd>
        <dt>Total Notes</dt>
        <dd>@ViewBag.TotalNotes</dd>

    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
