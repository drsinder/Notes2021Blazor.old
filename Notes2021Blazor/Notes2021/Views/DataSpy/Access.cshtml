@{
    ViewData["Title"] = "Access";
}

<h2>Access</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoteFileId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArchiveId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeleteEdit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ViewAccess)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EditAccess)
        </th>
