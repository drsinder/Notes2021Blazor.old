@model IEnumerable<Notes2021Blazor.Shared.Mark>

@{
    ViewData["Title"] = "Marks";
}

<h2>Marks</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoteFileId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArchiveId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MarkOrdinal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoteHeaderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoteOrdinal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ResponseOrdinal)
        </th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoteFileId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArchiveId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MarkOrdinal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoteHeaderId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoteOrdinal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ResponseOrdinal)
        </td>
    </tr>
}
</table>
<p>
    <a asp-action="Index">Back to List</a>
</p>