@model Notes2021Blazor.Shared.Sequencer

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Sequencer</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UserId)
        @Html.HiddenFor(model => model.NoteFileId)
        @Html.HiddenFor(model => model.Ordinal)
        @Html.HiddenFor(model => model.StartTime)
        @Html.HiddenFor(model => model.Active)

        <div class="form-group">
            @Html.LabelFor(model => model.LastTime, htmlAttributes: new { @class = "col-form-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LastTime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LastTime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="ml-md-auto col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />  Notesfile: @ViewData["NoteFileName"]
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
