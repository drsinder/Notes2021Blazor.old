@model Notes2021.Models.ExportViewModel

@{
    ViewBag.Title = "Export";
}

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-8">
        @if (User.IsInRole("User"))
        {
            <h3>Export NoteFile @Model.FileName</h3>
            <form asp-controller="Export" asp-action="Index" method="post" class="form-horizontal" role="form">
                <input asp-for="FileName" type="hidden" />
                <div class="form-group">
                    <div class="form-group">
                        <div class="ml-md-auto col-md-10">
                            <div class="checkbox">
                                <input asp-for="isHtml" />
                                <label asp-for="isHtml"></label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="ml-md-auto col-md-10">
                            <div class="checkbox">
                                <input asp-for="isCollapsible" />
                                <label asp-for="isCollapsible"></label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="ml-md-auto col-md-10">
                            @*<input type="submit" value="Submit" />*@
                            <button type="submit" class="btn btn-info btn-sm" tabindex="4">
                                <img src="~/icons/glyphicons-basic-546-cloud-download.svg" width="25" class="svgwhite" /> Export/Download
                            </button>
                            @Html.ActionLink("Back to NoteFile Index", "Listing", "NoteDisplay", new { id = Model.FileNum })
                        </div>
                    </div>
                </div>
            </form>
        }
    </div>
</div>
