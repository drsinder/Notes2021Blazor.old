@model Notes2021Blazor.Shared.NoteHeader

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

@if (Model.ResponseOrdinal == 0)
{
    <h3>Are you sure you want to delete this note?</h3>
}
else
{
    <h3>Are you sure you want to delete this response?</h3>
}
<div>
    <h4>Note</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NoteSubject)
        </dt>

        <dd>
            @Html.Raw(Model.NoteSubject)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastEdited)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastEdited)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div @*class="form-actions no-color" *@>
        <button type="submit" class="btn btn-danger">
            <img src="~/icons/glyphicons-basic-17-bin.svg" width="25" class="svgwhite" /> Delete
        </button>
        |
        <a asp-action="Display" asp-route-id=@Model.Id class="btn btn-primary">Back to Note</a>
    </div>
    }
</div>
