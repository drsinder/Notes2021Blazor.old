@model Notes2021.Models.ForwardViewModel
@{
    ViewBag.Title = "Forward Note(s)";
}

<h2>@ViewBag.Title</h2>


<form asp-controller="NoteDisplay" asp-action="Forward" method="post" class="form-horizontal" role="form">
    @Html.HiddenFor(model => model.NoteID)
    @Html.HiddenFor(model => model.NoteSubject)
    @Html.HiddenFor(model => model.hasstring)

    <h4>Subject: @Model.NoteSubject</h4>

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="ToEmail" class="col-md-4 col-form-label"></label>
        <div class="col-md-8">
            <input asp-for="ToEmail" class="form-control short-input" autofocus />
            <span asp-validation-for="ToEmail" class="text-danger"></span>
        </div>
        <label asp-for="wholestring" class="col-md-4 col-form-label"></label>
        <div class="col-md-8">
            <input asp-for="wholestring" class="form-control short-input" />
        </div>
    </div>

    <div @*class="form-actions no-color" *@>
        @*<input type="submit" value="Forward" class="btn btn-primary" />*@
        <button type="submit" class="btn btn-info" tabindex="4">
            <img src="~/icons/glyphicons-basic-435-forward-email.svg" width="25" class="svgwhite" /> Forward
        </button>
        |
        <a asp-action="Display" asp-route-id=@Model.NoteID class="btn btn-primary">Back to Note</a>
    </div>
</form>
