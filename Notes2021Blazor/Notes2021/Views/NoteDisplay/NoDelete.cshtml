@model NoteXModel
@{
    ViewData["Title"] = "NoDelete";
}

<h2>Can Not Delete!</h2>

<div>
    <h3>@Model.DeleteMessage </h3>
    <p>Subject: @Html.Raw(@Model.nh.NoteSubject)</p>
    <p>Writer: @@Model.note.AuthorName</p>
</div>
<p>
    @*@Html.ActionLink("Return", "Display", new { id = @Model.nh.Id })*@
    <a asp-action="Display" asp-route-id=@Model.nh.Id class="btn btn-primary">Return</a>

</p>
